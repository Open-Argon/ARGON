const lookFor = 'argon'
const mySentence = input('Enter a sentence that contains the word \''+lookFor+'\': ')
const doesContainArgon = 'argon' is in split(' ', lower(mySentence))

if (doesContainArgon) [
    log(doesContainArgon, 'your sentence does contain the word \''+lookFor+'\'!')
] else [
    log(doesContainArgon, 'your sentence does not contain the word \''+lookFor+'\'!')
]