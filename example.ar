log('welcome to PI calculator!')

const sides = whole(input('how many sides will the circle have? (more sides = more acurate and longer loading) '))
const timing = time()
const angles = 360 / sides
var diameter = 0

var i = 0
while (i <- sides/2) [
    diameter = diameter + sin(radians(angles*i))
    i++
]
log('pi is',sides/diameter)
log('completed in', time()-timing, 'seconds')